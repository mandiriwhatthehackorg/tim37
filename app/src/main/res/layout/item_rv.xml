<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/viewItemMemberBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRed700"
        android:padding="8dp">

        <ImageView
            android:id="@+id/btnItemMemberDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/btnItemMemberDelete"
            android:text="Hapus"
            android:textColor="#fff"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewItemMemberForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/textItemMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Member"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textItemMemberPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HP Member"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textItemMemberSaldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saldo Member"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>